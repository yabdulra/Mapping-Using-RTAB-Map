<?xml version='1.0'?>

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />
  <xacro:include filename="$(find my_robot)/urdf/materials.xacro" />

  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0.08" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0.03" rpy=" 0 0 0"/> 
      <geometry>
        <cylinder length="0.12" radius="0.25"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0.03" rpy=" 0 0 0"/>
      <geometry>
        <cylinder length="0.12" radius="0.25"/>
      </geometry>
      <material name="Chassis"/>
    </visual>


    <collision name='back_caster_collision'>
      <origin xyz="-0.15 0 -0.045" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0349"/>
      </geometry>
    </collision>

    <visual name='back_caster_visual'>
      <origin xyz="-0.15 0 -0.045" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.035"/>
      </geometry>
    </visual>

    <collision name='front_caster_collision'>
      <origin xyz="0.15 0 -0.045" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0349"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.15 0 -0.045" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.035"/>
      </geometry>
    </visual>

  </link>

  <!-- ====================top ring===================== -->
  <link name='top_ring'>
	
	<pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="2.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='top_ring_collision'>
      <origin xyz="0 0 0.1" rpy=" 0 0 0"/> 
      <geometry>
        <cylinder length="0.03" radius="0.26"/>
      </geometry>
    </collision>

    <visual name='top_ring_visual'>
      <origin xyz="0 0 0.1" rpy=" 0 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.26"/>
      </geometry>
      <material name="Ring"/>
    </visual>
  </link>
  
  <joint type="fixed" name="top_ring_hinge">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <child link="top_ring"/>
    <parent link="chassis"/>
    <axis xyz="0 0 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>
  
  <!-- ====================left wheel===================== -->
  <link name='left_wheel'>
	
	<pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='left_wheel_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/> 
      <geometry>
        <cylinder length="0.03" radius="0.08"/>
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.03" radius="0.08"/>
      </geometry>
      <material name="Black"/>
    </visual>
  </link>
  
  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0 0.15 0" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!-- ====================right wheel===================== -->
  <link name='right_wheel'>
	
	<pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='right_wheel_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/> 
      <geometry>
        <cylinder length="0.03" radius="0.08"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.03" radius="0.08"/>
      </geometry>
      <material name="Black"/>
    </visual>
  </link>
  
  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="0 -0.15 0" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <!--  ======================camera============================  -->
  <link name='camera'>
    <pose>0 0 0.1 0 0 0</pose>
	
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0.05 0.05 0.05" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='camera_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.02 0.03 0.02" />
      </geometry>
    </collision>

    <visual name='camera_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.02 0.03 0.02" />
      </geometry>
      <material name="Black"/>
    </visual>
  </link>

  <joint type="fixed" name="camera_joint">
    <origin xyz="0.26 0 0.1" rpy="0 0 0"/>
    <child link="camera"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

  <!--  ======================Hokuyo_Lidar============================  -->
  <link name='hokuyo'>
    <pose>0 0 0.1 0 0 0</pose>
	
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='hokuyo_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual name='hokuyo_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename = "package://my_robot/meshes/hokuyo.dae" />
      </geometry>
    </visual>
  </link>

  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0.15 0 0.15" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

</robot>

